<h1>These are all of the shows we currently have, click on a show to see details or write a review</h1>
<%= form_tag('/animes', method: :get) do %>

<%= text_field_tag :search, params[:search] %>
<%= submit_tag('Search', :name => nil) %>

<%end%>

<br />
<h2>Horror animes</h2>
<% @animes.horror_genre.each do |anime|%>
<li><%= link_to anime.name, anime_path(anime)%></li>
<%end%><br />

<h2>Action/Adventure animes</h2>
<% @animes.action_adventure_genre.each do |anime|%>
<li><%= link_to anime.name, anime_path(anime)%></li>
<%end%><br />

<h2>Psycological animes</h2>
<% @animes.psycological_genre.each do |anime|%>
<li><%= link_to anime.name, anime_path(anime)%></li>
<%end%><br />